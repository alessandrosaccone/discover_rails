
<% @posts.each_with_index do |post, index| %>
    <%= puts index %>
    <% if (index.odd? || index==0) %>
        <ul class="cards">
    <% end %> 
    <li class='card'>
    <h3 class='card-title'>
        <%= post.titolo %>
        <% if post.expired? %>
            - <%= t('scaduto')%>
        <% end %>
    </h3>
    <div class='card-content'>
        <p>
            <%= post.descrizione%>
        </p>
        <hr> 
        <h4 style='font-size: 15px'>Citt√†: <%= post.nomeC %> <br/></h4>
        </div>
        
        <div class='card-languages'>
            <h4>
                <%= t('lingua:')%> <span style='font-weight: normal;'><%= post.lingua %></span> <br />
                <%= t('data e ora:')%> <span style='font-weight: normal'><%= post.instance_variable_get(:@data) %> <%= post.instance_variable_get(:@ora) %></span>
            </h4>
        </div>
        <div class='card-link-wrapper'>
            <% if !user_signed_in? %>
                <%= link_to t('Contatta'), conversation_path(other_email: post.user_email), class: "card-link"%>
            <% elsif current_user.email != post.user_email %>
                <%= link_to t('Contatta'), conversation_path(other_email: post.user_email), class: "card-link"%>
            <% end %>
            <br>
            <% if post.expired? %>
                <%= link_to t("Vedi recensioni"), post_path(post), class: "card-link" %>
            <% else %>
                <%= link_to post.instance_variable_get(:@total_price), post_path(post), class: "card-link" %>
            <% end %>
            <br>
        </div>
        </li> 
    <% if index.even? || index == @posts.size %>
        </ul>
    <% end %>
<% end %>

 