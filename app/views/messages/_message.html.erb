<div id="<%= message.id %>" convo='<%= message.conversation_id %>' onmousedown='startAction(this)'>

  <% if message.user_id == current_user.id && !message.deleted_for_user%>
    <div class="message-box my-message">
      <p class='msg-content'><%= message.body %></p>
      <% if message.audio.attached? %>
          <%= audio_tag message.audio %>
      <% end %>
      <div class='ap'><p class='data-msg'><%= message.created_at %></p></div>
    </div>
  <% elsif message.user_id != current_user.id%>
    <div class="message-box not-my-message">
      <p class='msg-content'><%= message.body %></p>
      <% if message.audio.attached? %>
          <%= audio_tag message.audio %>
      <% end %>
      <div class='ap' ><p class='data-msg'><%= message.created_at %></p></div>
    </div>
  <% end %>

</div>

<script>
    var pressTimer;
    function startAction(e){
        var token = document.querySelector('meta[name="csrf-token"]').getAttribute('content')
        const el = e.querySelector('.ap')
        pressTimer = setTimeout(function(){
          if(!el.querySelector('button')){
            console.log("tieni premuto")
            const container = document.createElement('div')
            const b1 = document.createElement('button')
            b1.textContent = 'Eliminate for me'
            const b2 = document.createElement('button')
            b2.textContent = 'Eliminate for both'
            container.appendChild(b1)
            container.appendChild(b2)
            el.append(container)

            const id = parseInt(e.id)
            const convo_id = parseInt(e.getAttribute('convo'))
            console.log(id)

            b1.addEventListener('click',function(){
              fetch('delete_for_me', {
                method: 'POST',
                headers: {
                  'Content-Type': 'application/json',
                  'X-CSRF-Token': token
                },
                body: JSON.stringify({
                  message: id
                })
              })
              .then(function(response){
                console.log(response)
                el.parentElement.remove()
              }).catch(function(error){
                console.log(error)
              })
            })

            b2.addEventListener('click',function(){
              fetch('delete_for_both', {
                method: 'POST',
                headers: {
                  'Content-Type': 'application/json',
                  'X-CSRF-Token': token
                },
                body: JSON.stringify({
                  message: id,
                  conversation: convo_id
                })
              })
              .then(function(response){
                console.log(response)
                el.parentElement.remove()
              }).catch(function(error){
                console.log(error)
              })
            })
          }
          else{
            const daRim = el.querySelectorAll('button')
            daRim.forEach(element => {
              element.remove()
            });
          }
        }, 800)
    }
</script>
