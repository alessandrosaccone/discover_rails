<style>
  .booking-details {
    font-family: Arial, sans-serif;
    margin: 20px;
    padding: 10px;
    border: 1px solid #ccc;
    border-radius: 5px;
    background-color: #f5f5f5;
  }

  .booking-details h1 {
    font-size: 24px;
    margin-bottom: 10px;
  }

  .booking-details p {
    margin: 5px 0;
  }

  .booking-details strong {
    font-weight: bold;
  }

  .refund-link {
    display: inline-block;
    margin-top: 10px;
    padding: 5px 10px;
    background-color: #e74c3c;
    color: #fff;
    text-decoration: none;
    border-radius: 3px;
  }

  .refund-link:hover {
    background-color: #c0392b;
  }

  .refund-link:active {
    position: relative;
    top: 1px;
  }

  .invoice-link {
    margin-top: 10px;
  }
</style>
<% content_for :for_head do %>
  <%= stylesheet_link_tag "application" %>
<% end %>
<%=render 'layouts/navbar'%>
<div class="booking-details">
  <h1>Booking Details</h1>

  <p><strong>Booking ID:</strong> <%= @booking.id %></p>
  <p><strong>User:</strong> <%= @booking.user.name %></p>
  <p><strong>Post:</strong> <%= @booking.post.titolo %></p>
  <p><strong>Number of People:</strong> <%= @booking.num_pers %></p>

  <% if @booking.refundable? %>
    <%= link_to 'Refund Booking', refund_booking_path(@booking), method: :post, data: { confirm: 'Are you sure you want to refund this booking?' }, class: 'refund-link' %>
  <% else %>
    <p>This booking is not eligible for a refund.</p>
  <% end %>

  <p class="invoice-link">
    Biglietto: <%= link_to "Scarica fattura", download_invoice_booking_path(@booking), target: "_blank" %>
  </p>
</div>


