
<%content_for :for_head do %>
  <%= stylesheet_link_tag "application-login_guide" %>
<% end %>

<header class="header">
        <nav class="navbar">
          <a href="<%=home_pages_path%>">Home</a>
          <a href="<%= new_user_session_path() %>">Login</a>
        </nav>
    </header>
    <div class="background" style="background: url(<%=image_path('banner_mario.jpg')%>)"></div>

    <div class="container"></div>

    <div class="container-2" style="background: url(<%=image_path('banner_mario.jpg')%>)"></div>

    <div class="container-3">
        <div class="logreg-box">
            <div class="form-box login">
              <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
                <%= render "devise/shared/error_messages", resource: resource %>
                <h2><b>Registrati</b></h2>
    
                <div class="input-box">
                  <span class="icon"></span>
                  <%= f.text_field :name, autofocus: true, autocomplete: "nome" %>
                  <label for="nome"><b>Nome</b></label>
                </div>

                <div class="input-box">
                  <span class="icon"></span>
                  <%= text_field_tag(:cognome) %>
                  <label for="cognome"><b>Cognome</b></label>
                </div>

                <div class="input-box">
                  <span class="icon"></span>
                  <%= text_field_tag(:indirizzo) %>
                  <label for="indirizzo"><b>Indirizzo</b></label>
                </div>

                <div class="input-box">
                  <span class="icon"></span>
                  <%= text_field_tag(:citta) %>
                  <label for="citta"><b>Citta</b></label>
                </div>

                <!-- Da modificare -->
                <div class="input-box">
                  <span class="icon"></span>
                  <%= text_field_tag(:stato) %>
                  <label for="stato"><b>Stato-Inserire Iniziali</b></label>
                </div>


                <div class="input-box">
                  <span class="icon"></span>
                  <%= text_field_tag(:codicepostale) %>
                  <label for="codicepostale"><b>Codice Postale</b></label>
                </div>

                <div class="input-box">
                  <span class="icon"></span>
                  <%= text_field_tag(:regione) %>
                  <label for="regione"><b>Regione</b></label>
                </div>

                <div class="input-box">
                  <span class="icon"></span>
                  <%= text_field_tag(:codicefiscale) %>
                  <label for="codicefiscale"><b>Codice Fiscale</b></label>
                </div>

                <div class="input-box">
                  <span class="icon"></span>
                  <%= text_field_tag(:telefono) %>
                  <label for="telefono"><b>Telefono</b></label>
                </div>
                
                <div class="input-box">
                  <span class="icon"></span>
                  <%= date_field_tag(:nascita) %>
                  <label for="nascita"><b>Nascita</b></label>
                </div>

                <div class="input-box">
                  <span class="icon"></span>
                  <%= text_field_tag(:iban) %>
                  <label for="iban"><b>Iban</b></label>
                </div>

                <div class="input-box">
                  <span class="icon"></span>
                  <%= text_field_tag(:statobanca) %>
                  <label for="statobanca"><b>Stato dove Ã¨ la banca</b></label>
                </div>

                <div class="input-box">
                    <span class="icon"></span>
                    <%= f.email_field :email, autofocus: true, autocomplete: "email" %>
                    <label><b>Email</b></label>
                </div>
                
                <div class="input-box">
                    <span class="icon"></span>
                     <%= f.password_field :password, autocomplete: "new-password" %>
                      
                    <label><b>Password</b></label>
    
                </div> 
                <div class="input-box">
                  <span class='icon'></span>
                  <%= f.password_field :password_confirmation, autocomplete: "new-password" %>    
                  <label><b>Conferma Password</b></label> 
                </div>

                <% if @minimum_password_length %>
                    <em>(<%= @minimum_password_length %> characters minimum)</em>
                <% end %>
                  
                <div class="input-box">
                    <span class="icon"></span>
                     <%= f.text_field :iva, autofocus: true, autocomplete: "iva" %>
                    <label><b>Partita Iva</b></label>
                </div> 
    
                <div class="remember-forgot">
                  <% if devise_mapping.rememberable? %>
                    <label>
                    <%= f.check_box :remember_me %>
                    Ricordami
                    </label>
                  <% end %>
                  <a href="#">Password dimenticata?</a>
                </div>

                <%=f.hidden_field :role_id, value: 10, readonly: true%>
                
                <button type="submit" class="btn">Registrati</button>
              <%end%>
            </div>
        </div>
    </div>

